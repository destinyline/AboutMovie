<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg"
    tools:context="com.sguyalive.aboutmovie.LoginActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/loginlg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/EDTUsername"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/logo"
        android:background="#4d000000"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:hint="Username"
        android:textColorHint="#73ffffff"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/EDTPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/EDTUsername"
        android:background="#4d000000"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:hint="Password"
        android:textColorHint="#73ffffff"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/SingIn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EDTPassword"
        android:text="LOGIN"
        android:textSize="14sp"
        android:textColor="#696969"
        android:onClick="onClickSignIn"
        />

    <Button
        android:id="@+id/btnregis"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="#009900"
        android:layout_below="@+id/SingIn"
        android:text="SIGN UP"
        android:layout_marginTop="60dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:onClick="onClicksignup"/>

    <Button
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#131130"
        android:layout_below="@+id/btnregis"
        android:text="SKIP"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickskip"/>


</RelativeLayout>